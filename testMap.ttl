@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix ex: <http://example.com/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix activity: <http://example.com/activity/> .
@prefix schema: <http://schema.org/> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix fnml: <http://semweb.mmlab.be/ns/fnml#> .
@prefix fno: <http://w3id.org/function/ontology#> .
@prefix grel: <http://users.ugent.be/~bjdmeest/function/grel.ttl#> .
@prefix sti: <http://sti2.at#> .
@base <http://www.schema.org/> . #the base for the classes


<#LOGICALSOURCE>
rml:source "./testIn.xml";
rml:referenceFormulation ql:XPath;
rml:baseSource <#Mapping>;
rml:iterator "/root/persons/*".

<#LOGICALSOURCE2>
rml:source "./testIn.xml";
rml:referenceFormulation ql:XPath;
rml:baseSource <#Mapping>;
rml:iterator "/root/persons/*/sports/*".


<#Mapping>
rml:logicalSource <#LOGICALSOURCE>;

rr:subjectMap [
    rml:reference "name";
    rr:class schema:Person;
];

rr:predicateObjectMap [
    rr:predicate schema:age;
    rr:objectMap [ rml:reference "age" ];
];

rr:predicateObjectMap [
    rr:predicate schema:likesSports;
    rr:objectMap  [
           rr:parentTriplesMap <#SPORTSmapping>;
           rr:joinCondition [
                   rr:child "name";
                   rr:parent "../../name";
                 ];
        ];
        ];
        rr:predicateObjectMap [
            rr:predicate schema:likesSports2;
            rr:objectMap  [
                   rr:parentTriplesMap <#SPORTSmapping>;

                ];
                ].

<#SPORTSmapping>
rml:logicalSource <#LOGICALSOURCE2>;

 rr:subjectMap [
    rr:termType rr:BlankNode;
    rr:class schema:Sport;
 ];

rr:predicateObjectMap [
    rr:predicate schema:name;
    rr:objectMap [ rml:reference "." ];
].
